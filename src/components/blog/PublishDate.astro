---
import dateFormat from "dateformat";
const {date} = Astro.props;
import { i18n } from "dateformat";

i18n.dayNames = [
  "Min",
  "Sen",
  "Sel",
  "Rab",
  "Kam",
  "Jum",
  "Sab",
  "Minggu",
  "Senin",
  "Selasa",
  "Rabu",
  "Kamis",
  "Jumat",
  "Sabtu",
];

i18n.monthNames = [
  "Jan",
  "Feb",
  "Mar",
  "Apr",
  "Mei",
  "Jun",
  "Jul",
  "Agu",
  "Sep",
  "Okt",
  "Nov",
  "Des",
  "Januari",
  "Februari",
  "Maret",
  "April",
  "Mei",
  "Juni",
  "Juli",
  "Agustus",
  "September",
  "Oktober",
  "November",
  "Desember",
];

---
<small class="
        text-pacamara-primary/50 font-pacamara-space tracking-widest transition-all duration-300 text-[16px]
        dark:text-white/40
    ">
    { dateFormat(date, "fullDate") }
</small>
