---
import ModeSwitch from "./ModeSwitch.astro";
import HamburgerButton from "./HamburgerButton.astro";
import Navigation from "./Navigation.astro";
import Logo from "./Logo.astro";
---

<div
  class="navigation flex-1 ease-in-out absolute top-0 w-full bg-pacamara-white dark:bg-pacamara-dark transition-all duration-300 p-7 h-dvh h-screen hidden pt-40 z-10 shadow-2xl"
  id="navigation_wrapper"
>
  <Navigation />
</div>
<header
  class="container mx-auto px-7 py-10 bg-white flex flex-initial flex-row gap-10 items-center justify-between transition-all duration-300 dark:bg-pacamara-dark relative z-20"
>
  <div class="logo flex-none">
    <a
      href="/"
      class="flex items-center font-bold font-pacamara-space text-lg hover:text-pacamara-accent transition-all duration-300 dark:text-white dark:hover:text-pacamara-accent"
    >
      <Logo />
    </a>
  </div>
  <div class="navigation flex-1 hidden md:flex justify-end">
    <Navigation />
  </div>

  <div class="relative flex flex-initial flex-row items-center gap-5">
    <ModeSwitch />
    <HamburgerButton />
  </div>
</header>
